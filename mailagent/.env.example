# Mailagent Environment Configuration

# Service
SERVICE_NAME=mailagent
DEBUG=true
ENVIRONMENT=development

# Database (uses main Aexy database)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@postgres:5432/aexy

# Redis (uses main Aexy Redis)
REDIS_URL=redis://redis:6379/0

# AWS SES (optional - for production email sending)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# SMTP fallback (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
DEFAULT_REQUESTS_PER_MINUTE=60
DEFAULT_REQUESTS_PER_DAY=10000

# Domain Warming
DEFAULT_WARMING_SCHEDULE=moderate

# API
API_PREFIX=/api/v1
